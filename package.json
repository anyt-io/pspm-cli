{
	"name": "@anytio/pspm",
	"version": "0.5.1",
	"description": "CLI for PSPM - Prompt Skill Package Manager for AI coding agents",
	"author": "anyt.io",
	"license": "Artistic-2.0",
	"keywords": [
		"prompt",
		"skill",
		"package-manager",
		"ai",
		"claude",
		"claude-code",
		"coding-agent"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/anyt-io/pspm-cli"
	},
	"homepage": "https://pspm.dev",
	"bugs": {
		"url": "https://github.com/anyt-io/pspm-cli/issues"
	},
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"bin": {
		"pspm": "./bin/pspm.js"
	},
	"files": [
		"bin",
		"dist",
		"README.md",
		"CHANGELOG.md",
		"CLI_GUIDE.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "tsx src/index.ts",
		"build": "tsup",
		"start": "node dist/index.js",
		"link": "pnpm build && pnpm link --global",
		"unlink": "pnpm unlink --global",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint src",
		"check": "biome check src",
		"format": "biome format ./src --write",
		"knip": "knip",
		"test": "vitest run",
		"test:watch": "vitest",
		"prepublishOnly": "pnpm build"
	},
	"dependencies": {
		"@inquirer/prompts": "^8.2.0",
		"commander": "^14.0.3",
		"ignore": "^7.0.5",
		"ini": "^6.0.0",
		"open": "^11.0.0",
		"semver": "^7.7.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/ini": "^4.1.1",
		"@types/node": "^25.2.2",
		"@types/semver": "^7.7.1",
		"knip": "^5.82.1",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
